<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context="com.comp380.towergame.OptionsActivity" >
    
    <CheckBox android:id="@+id/checkbox_defaultButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultButt"
        android:textColor="#907D50"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="400dp"
        android:onClick="onCheckboxClicked"/>
    
    <CheckBox android:id="@+id/checkbox_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oldButt"
        android:textColor="#907D50"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="400dp"
        android:onClick="onCheckboxClicked"/>
    
    <CheckBox android:id="@+id/checkbox_musicPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/musicOn"
        android:textColor="#907D50"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="400dp"
        android:onClick="onCheckboxClicked"/>
    
    <CheckBox android:id="@+id/checkbox_musicStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/musicOff"
        android:textColor="#907D50"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="400dp"
        android:onClick="onCheckboxClicked"/> 
    
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"      
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="@string/version"
        android:textSize="20dp" />

</LinearLayout>