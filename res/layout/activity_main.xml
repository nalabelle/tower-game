<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temp_background" 
    tools:context="com.comp380.towergame.MainActivity" >
    
<!-- Padding neccessary?
	android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"   -->
    
    <Button
        android:id="@+id/bStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvVersion"
        android:layout_marginBottom="148dp"
        android:layout_marginRight="121dp"
        android:layout_toLeftOf="@+id/tvVersion"
        android:background="@drawable/transparent_button"
        android:onClick="launch_game"
        android:text="START"
        android:textSize="@dimen/menu_buttons" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="@string/version"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvVersion"
        android:layout_alignLeft="@+id/bStart"
        android:layout_marginBottom="59dp"
        android:background="@drawable/transparent_button"
        android:onClick="launch_credits"
        android:text="CREDITS"
        android:textSize="@dimen/menu_buttons" />

</RelativeLayout>