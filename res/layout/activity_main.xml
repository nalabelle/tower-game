<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context="com.comp380.towergame.MainActivity" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:text="@string/title"
        android:shadowColor="#F00000"
        android:shadowRadius="20"
        android:textColor="#907D50"
        android:textSize="100dp" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="600dp"
        android:background="@drawable/transparent_button"
        android:onClick="launchGame"
        android:text="START"
        android:textColor="#907D50"
        android:textSize="@dimen/menu_buttons" />
    
    <Button
        android:id="@+id/bOptions"
        android:layout_marginLeft="600dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:onClick="launchOptions"
        android:text="OPTIONS"
        android:textColor="#907D50"
        android:textSize="@dimen/menu_buttons" />

    <Button
        android:id="@+id/bCredits"
        android:layout_width="wrap_content"
        android:layout_marginLeft="600dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:text="CREDITS"
        android:textColor="#907D50"
        android:onClick="launchCredits"
        android:textSize="@dimen/menu_buttons" />
    
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"        
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:text="@string/version"
        android:textSize="20dp" />

</LinearLayout>